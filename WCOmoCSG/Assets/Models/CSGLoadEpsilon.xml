		            	<slicePath class='net.wcomohundro.jme3.csg.shape.CSGSplineGenerator' 
		            		arc='7PI/4' firstRadial='1PI/8' helix='0.5' />
		                <scaleFaces>
		                	<com.jme3.math.Vector3f x='1.0' y='6' z='2'/>
		            	</scaleFaces>
		            </mesh>
		        </net.wcomohundro.jme3.csg.CSGShape>   
		        		         
