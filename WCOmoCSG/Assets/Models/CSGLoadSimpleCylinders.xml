        </com.jme3.scene.Geometry>

        <!-- Closed, minimal cylinder -->
        <com.jme3.scene.Geometry name='Cylinder2'
       			materialName='Textures/BrickWall/BrickWall.xml' >
        		<!--materialName='Textures/Debug/Wireframe.j3m'-->	
