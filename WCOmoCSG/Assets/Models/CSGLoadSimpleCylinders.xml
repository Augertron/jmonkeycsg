            <mesh axisSamples='2' class='net.wcomo.jme3.csg.shape.Cylinder' closed='true' height='1.5' radialSamples='4' radius='1.1' radius2='1.1'/>
        </com.jme3.scene.Geometry>
                
        <!-- An open cylinder -->
        <com.jme3.scene.Geometry name='Cylinder3'
        		materialName='Textures/Debug/Normals.xml'>
            <transform class='com.jme3.math.Transform'>
