        </com.jme3.scene.Geometry>

		<!-- A closed cylinder -->
        <com.jme3.scene.Geometry name='Cylinder1'
        		 materialName='Textures/Rock/Rock1.xml' >
            <transform class='com.jme3.math.Transform'>
                <translation class='com.jme3.math.Vector3f' x='2.0'/>
            </transform>
            <mesh class='net.wcomo.jme3.csg.shape.Cylinder' 
